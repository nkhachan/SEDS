<StatusScreen>
    id: statusscreen
    name: 'statusscreen'
    statusscreen: statusscreen
    AnchorLayout:
        canvas:
            Rectangle:
                source: 'img/space.jpeg'
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"
        BoxLayout:
            spacing: "20dp"
            size_hint_y:100
            Label:
                text: root.rn1
                font_size: '50sp'

        BoxLayout:
            spacing: "20dp"
            size_hint_y: 100
            Label:
                halign: 'left'
                text: root.rn2
                font_size: '25sp'
